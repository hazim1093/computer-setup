{
    "[terraform]": {
      "editor.formatOnSave": true
    },
    "[yaml]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "bluebrown.yamlfmt",
    },
    "editor.wordWrap": "on",
    "debug.internalConsoleOptions": "neverOpen",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.renderWhitespace": "none",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 700,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    "git.confirmSync": false,

    "go.lintTool": "golangci-lint",
    "go.testTimeout": "120s",

    "Notes.notesLocation": "/Users/hazim/wd/vscode-notes",

    "peacock.affectTabActiveBorder": true,
    "peacock.surpriseMeOnStartup": true,

    "python.terminal.activateEnvironment": false,

    "redhat.telemetry.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",

    "terminal.integrated.fontFamily": "MesloLGS NF",

    "todo-tree.general.tags": [
      "BUG",
      "HACK",
      "FIXME",
      "TODO",
      "XXX",
      "[ ]",
      "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.tree.showScanModeButton": false,

    "vs-kubernetes": {
      "vs-kubernetes.crd-code-completion": "disabled",
      "vs-kubernetes.ignore-recommendations": true,
      "vscode-kubernetes.kubectl-path.mac": "~/.vs-kubernetes/tools/kubectl/kubectl",
      "vscode-kubernetes.helm-path.mac": "~/.vs-kubernetes/tools/helm/darwin-amd64/helm",
      "vscode-kubernetes.minikube-path.mac": "~/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
    },
    "vscode-kubernetes.helm-path": "$(which helm)",
    // "vscode-kubernetes.helm-path.mac": "/usr/local/bin/helm",
    "vscode-kubernetes.kubectl-path": "~/.vscode/binaries/kubectl",
    "workbench.colorTheme": "Dracula At Night",
    "workbench.editorAssociations": {
      "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "icons-carbon",
    "rapidapi.terminalLink.enabled": false,
    "terminal.external.osxExec": "iTerm.app",
    "keyboard.dispatch": "keyCode",
    "git.suggestSmartCommit": false,
    "[python]": {
      "editor.formatOnType": true
    },
    "application.shellEnvironmentResolutionTimeout": 15,
    "cSpell.userWords": [
      "apiextensions",
      "azuread",
      "azurecr",
      "clusteroperator",
      "clusterrolebinding",
      "Configurator",
      "crossplane",
      "Entra",
      "entraid",
      "gitops",
      "hazim",
      "kaniko",
      "keypair",
      "kubeadmin",
      "kubeconfig",
      "kubeconform",
      "Kustomization",
      "kustomize",
      "Kyverno",
      "mapstructure",
      "nolint",
      "ocds",
      "resty",
      "ROSCA",
      "secretstore",
      "serviceaccount",
      "serviceaccounts",
      "stakater",
      "upbound",
      "Velero",
      "yamlfmt",
      "zerolog",
      "zetachain"
    ],
    // "editor.inlineSuggest.enabled": true,
    "makefile.configureOnOpen": true,
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "yamlfmt.args": [
      "-conf",
      "/Users/hazim/config/yamlfmt/yamlfmt.yaml"
    ],
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "explorer.confirmPasteNative": false,
    "solidity.telemetry": false,
    // "github.copilot.enable": {
    //   "*": true,
    //   "plaintext": false,
    //   "markdown": false,
    //   "scminput": false
    // },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "go.toolsManagement.autoUpdate": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "docker.extension.enableComposeLanguageServer": false,
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "[dockercompose]": {
      "editor.insertSpaces": true,
      "editor.tabSize": 2,
      "editor.autoIndent": "advanced",
      "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[github-actions-workflow]": {
      "editor.defaultFormatter": "redhat.vscode-yaml"
    }

  }
